{
  "title": "E-commerce API Monitoring",
  "uid": "ecommerce-api",
  "tags": ["ecommerce", "api"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "title": "Error Rate (5xx)",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(http_errors_5xx_total[1m])",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Request Duration (95th percentile)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 4,
      "title": "Database Connection Pool Usage",
      "type": "gauge",
      "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
      "targets": [
        {
          "expr": "db_connection_pool_usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "max": 10,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 7, "color": "yellow"},
              {"value": 9, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Memory Leak Objects",
      "type": "stat",
      "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
      "targets": [
        {
          "expr": "memory_leak_objects",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Inventory Race Conditions",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(inventory_race_conditions_total[1m])",
          "legendFormat": "Race Conditions",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
